<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Purchase price</th>
      <th>Sale price</th>
      <th>Total sale</th>
      <th>Status</th>
      <th>Is warranty</th>
      <th>Returnable</th>
      <th>Condition</th>
      <th>Alert on</th>
      <th>Description</th>
      <th>User account</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.purchase_price %></td>
        <td><%= item.sale_price %></td>
        <td><%= item.total_sale %></td>
        <td><%= item.status %></td>
        <td><%= item.is_warranty %></td>
        <td><%= item.returnable %></td>
        <td><%= item.condition %></td>
        <td><%= item.alert_on %></td>
        <td><%= item.description %></td>
        <td><%= item.user_account_id %></td>
        <td><%= item.category_id %></td>
        <td><%= item.brand %></td>
        <td><%= item.company %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
