  </div>

  <div class="field">
    <%= form.label :total_sale %>
    <%= form.number_field :total_sale %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%#= form.select :status,options_for_select(Item.statuses.keys,item.status) %>
  </div>

  <div class="field">
    <%= form.label :is_warranty %>
